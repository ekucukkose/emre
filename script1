get_abc <- function(x){
  
  df <- data.frame(matrix(ncol=1,nrow=8000))
  x <- as.data.frame(x)
  count=1
  for(i in x[,2]){
    count=count+1
    length_i <- nchar(i) - 1
    k <- substr(i,1,length_i)
    df[count,1] <- k}
  df<-df[2:8001,]
  x[,2]<-df
  
  return(x)
}

