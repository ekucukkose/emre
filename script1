  df[901:1000,1] <- "R100.08"
  df[1001:1100,1] <- "R100.09"
  df[1101:1200,1] <- "R100.10"
  
  df[1:100,2] <- test_pemc[1:100,"US"]
  df[101:200,2] <- test_pemc[101:200,"US"]
  df[201:300,2] <- test1[101:200,"US"]
